{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,   
    "removeComments": true,  
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./.dist",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "./src/@types/*",
    ],
    "sourceRoot": "./src",    
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules/**/*", 
    "./.dist/**/*", 
    "./**/*.js"
  ]
}
